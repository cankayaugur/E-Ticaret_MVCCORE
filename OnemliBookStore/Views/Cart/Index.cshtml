@model CartDto

<h1 class="h3">Book Cart</h1>
<hr />

@if (Model.CartItems.Count() == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                No Book In Cart
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Cart Items</h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Book Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Price)</td>
                            <form asp-controller="Cart" asp-action="deletefromcart" method="post">
                                <input type="hidden" name="bookId" value="@item.BookId" />
                                <td>
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </td>
                            </form>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-4">
            <div class="text-left">
                <h4>Cart Summary</h4>
                <table class="table">
                    <tbody>
                        <tr>
                            <th class="text-muted">Cart Total</th>
                            <td>@Model.TotalPrice().ToString("c")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Shipping</th>
                            <th>Free</th>
                        </tr>
                        <tr>
                            <th class="text-muted">Order Total</th>
                            <th>@Model.TotalPrice().ToString("c")</th>
                        </tr>
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-left fa-fw"></i>Continue to marketing
                    </a>
                    <a href="/checkout" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-right fa-fw"></i>Check out
                    </a>
                </div>
            </div>
        </div>
    </div>
}