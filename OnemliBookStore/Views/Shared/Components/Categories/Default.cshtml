@model List<Category>
<div class="list-group">
    <a href="/books" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == null ?"active":"")">All Categories</a>

    @foreach (var category in Model)
    {
        <a asp-controller="Shop"
           asp-action="List"
           asp-route-category="@category.Url"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.Url?"active":"")">
            @category.Name
        </a>
    }
</div>   