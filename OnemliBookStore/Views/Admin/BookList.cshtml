@model BookListDto

<div class="row">
    <div class="col-md-12">
        <h3>Admin Books</h3>
        <hr />
        <a class="btn btn-primary btn-sm" href="/admin/books/create">Add Book</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px">Id</td>
                    <td style="width: 100px">Image</td>
                    <td>Name</td>
                    <td style="width: 20px">Price</td>
                    <td style="width: 20px">Anasayfa</td>
                    <td style="width: 150px">Process</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Books.Count > 0)
                {
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@item.BookId</td>
                            <td><img style="width:180px; max-height:280px" src="~/img/@item.ImageUrl" /></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <i class="fas fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/books/@item.BookId" class="btn btn-primary btn-sm">Edit</a>

                                <form action="/admin/bookdelete" method="post" style="display: inline">
                                    <input type="hidden" name="bookId" value="@item.BookId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Books</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>