@model CategoryDto

<h1 class="h3">Edit Category</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="admin" asp-action="categoryedit" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-md-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Edit Category</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <td style="width: 30px">Id</td>
                            <td style="width: 100px">Image</td>
                            <td>Name</td>
                            <td style="width: 20px">Price</td>
                            <td style="width: 150px">Process</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Books.Count > 0)
                        {
                            @foreach (var item in Model.Books)
                            {
                                <tr>
                                    <td>@item.BookId</td>
                                    <td><img src="~/img/@item.ImageUrl" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <a href="/admin/book/@item.BookId" class="btn btn-primary btn-sm">Edit</a>

                                        <form action="/admin/deletefromcategory" method="post" style="display: inline">
                                            <input type="hidden" name="bookId" value="@item.BookId" />
                                            <input type="hidden" name="categoryId" value="@Model.CategoryId" />
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <h3>No Books</h3>
                            </div>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>